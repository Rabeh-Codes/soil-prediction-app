{
  "compilerOptions": {
    "lib": ["ES2022"],
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@server/*": ["server/*"],
      "@scripts/*": ["scripts/*"],
      "@config/*": ["config/*"]
    },
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowJs": false,
    "forceConsistentCasingInFileNames": true,
    "verbatimModuleSyntax": true
  }
}
